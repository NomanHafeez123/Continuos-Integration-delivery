<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="AutomationSuite" verbose="1" >
    <listeners>
        <listener class-name = "utils.ListenersTestNG"></listener>
    </listeners>
    <test name="ValidationTask" >
        <parameter name = "browser" value="chrome"/>
        <parameter name="Base_URL" value="https://www.tamanna.com/"></parameter>
        <parameter name="wait" value="10"></parameter>
        <parameter name="items" value="2 items"></parameter>
        <parameter name="price" value="KWD 34.950"></parameter>
        <parameter name="priceZero" value="KWD 0.000"></parameter>
        <classes>
            <class name="ValidateCart" />
            <class name="ValidateShoppingBag"/>
            <class name="ValidateRemoveCart"/>
            <class name="ValidateHomeNavigation"/>
            <class name="CaptureScreenshot"/>
        </classes>
    </test>
</suite>